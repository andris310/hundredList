extends ../layout.jade

block content
  h1= title
  form(name='addList', method='post', action=list ? '/update-list/' + list._id : '/api/create-list').new-form
    ul
      li
        label(for='name') Name
        input(type='text', id='name', name='name', value=list && list.name ? list.name : '')
      li
        label(for='url') Url
        input(type='text', id='url', name='url', value=list && list.url ? list.url : '')

    button(type='submit') Save
