extends layout

block content
  h1= title
  form(name='addItem', method='post', action=item ? '/update-item/' + item._id : '/add-item').new-form
    ul
      li
        label(for='name') Name
        input(type='text', id='name', name='name', value=item && item.name ? item.name : '')

    button(type='submit') Save